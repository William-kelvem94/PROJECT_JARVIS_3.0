# === JARVIS 4.0 Configuration ===

# Application
APP_NAME=JARVIS 4.0
VERSION=4.0.0
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000

# Security
SECRET_KEY=jarvis-4.0-super-secret-key-change-in-production
JWT_SECRET_KEY=jarvis-4.0-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# Database
DATABASE_URL=sqlite:///./jarvis.db

# Redis
REDIS_URL=redis://localhost:6379

# AI Models
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama2
WHISPER_MODEL=base

# Vision
YOLO_MODEL=yolov8n.pt

# Voice
TTS_ENGINE=pyttsx3

# File Upload
MAX_FILE_SIZE=52428800
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/jarvis.log

# Features
ENABLE_VOICE=true
ENABLE_VISION=true
ENABLE_PLUGINS=true